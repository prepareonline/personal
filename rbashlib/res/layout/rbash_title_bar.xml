<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/owner_violet_bkgrnd_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/owner_orange_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/layout_head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@color/owner_violet_bkgrnd_light"
                android:gravity="center_horizontal"
                android:src="@drawable/rbash_small" />

            <TextView
                android:id="@+id/activity_header_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_header_finest_local_deals"
                android:textColor="@color/owner_violet_bkgrnd_dark"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/button_header_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/owner_violet_bkgrnd_dark"
                android:text="Logout"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/owner_orange_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/owner_violet_bkgrnd_dark" />
    </LinearLayout>

</LinearLayout>